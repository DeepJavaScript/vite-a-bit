{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.json", "legacy/**/*.js"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
